nextflow_process {

    name "Test Process SRA_PREFETCH"
    script "../main.nf"
    process "SRA_PREFETCH"

    tag "modules"
    tag "modules_local"
    tag "sra_prefetch"

    test("prefetch SRA file - stub") {

        options "-stub"
        when {
            process {
                """
                input[0] = Channel.of([ [id: "SRR13255544", sra_id: "SRR13255544"], "SRR13255544" ]) // tuple val(meta), val(sra_id)
                """
            }
        }

        then {
            assertAll (
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

    test("prefetch SRA file with max_size - stub") {

        options "-stub"
        when {
            params {
                max_size = "400M"
            }
            process {
                """
                input[0] = Channel.of([ [id: "SRR13255544", sra_id: "SRR13255544"], "SRR13255544" ]) // tuple val(meta), val(sra_id)
                """
            }
        }

        then {
            assertAll (
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

    test("prefetch SRA file - real run") {
        when {
            process {
                """
                input[0] = Channel.of([ [id: "SRR13255544", sra_id: "SRR13255544"], "SRR13255544" ]) // tuple val(meta), val(sra_id)
                """
            }
        }

        then {
            assertAll (
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}

